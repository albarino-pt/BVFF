---
import Navigation from "../components/Navigation.astro";
import { SkipLinks } from "accessible-astro-components";
import { Icon } from "astro-icon/components";
---

<header class="floating-header">
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/">Início</a>
    </li>

    <li class="menu-item">
      <a href="/socio">Faça-se Sócio</a>
    </li>
    <li class="menu-item">
      <a href="/contacto">Contacte-nos</a>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Sobre nós</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/historia">Quem somos</a>
        </li>
        <li class="submenu-item">
          <a href="/organizacao">Organização</a>
        </li>
        <li class="submenu-item">
          <a href="/viaturas">Viaturas</a>
        </li>
        <li class="submenu-item">
          <a href="/mdx-page/">MDX Page</a>
        </li>
        <li class="submenu-item">
          <a href="/markdown-page/">Markdown Page</a>
        </li>
        <li class="submenu-item">
          <a href="/accessible-components">Accessible Components</a>
        </li>
      </ul>
    </li>

    <li class="menu-item type-icon">
      <a
        href="https://www.facebook.com/bombeirosvoluntariosdafigueiradafoz"
        title="Visitar o nosso Facebook"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="ion:logo-facebook" />
      </a>
    </li>
    <li class="menu-item type-icon">
      <a
        href="https://www.instagram.com/bvfigueiradafoz"
        title="Visitar o nosso Instagram"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="ion:logo-instagram" />
      </a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use "../assets/scss/base/outline" as *;

  .floating-header {
    position: sticky; /* Keeps the header at the top of the viewport */
    top: 0;
    width: 100svw; /* Ensures the header spans the full width */
    z-index: 1000; /* Keeps the header above other elements */
    background-color: #161618e1; /* Light semi-transparent background */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Adds a subtle shadow for better visibility */
    backdrop-filter: blur(10px); /* Blur effect for transparency */
    box-sizing: border-box; /* Ensures padding and borders are included in width calculations */
  }

  /* Prevent content overlap */

  header .type-icon a {
    display: block;

    [data-icon] {
      height: auto;
      margin-top: -4px;
      width: 30px;

      path {
        fill: var(--action-color);
      }
    }

    &:hover {
      [data-icon] path {
        fill: var(--action-color-state);
      }
    }
  }
</style>
