---
import { Media } from "accessible-astro-components";

const { imgSrc, reverseImg = false } = Astro.props;
---

<section class="my-64">
  <div class="container hidden sm:block">
    <div class="grid grid-cols-1 gap-24 md:grid-cols-2 justify-center">
      {
        !reverseImg ? (
          <Media class="rounded-lg h-full object-cover" src={imgSrc} />
        ) : (
          ""
        )
      }
      <div class="space-content flex flex-col justify-center">
        <slot />
      </div>
      {
        reverseImg ? (
          <Media class="rounded-lg h-full object-cover" src={imgSrc} />
        ) : (
          ""
        )
      }
    </div>
  </div>

  <div class="container block sm:hidden">
    <div class="grid grid-cols-1 gap-24 md:grid-cols-2 justify-center">
      <Media class="rounded-lg h-full object-cover" src={imgSrc} />
      <div class="space-content flex flex-col justify-center">
        <slot />
      </div>
    </div>
  </div>
</section>
